    <footer class="text-center p-8 text-slate-400 text-sm">
        &copy; 2026 ระบบสถิติประชากรตำบลห้วยทราย
    </footer>

    <script>
        // ข้อมูลสถิติจากรูปภาพ
        const populationData = [
            { 
                id: 0, 
                name: "ยอดรวมทั้งตำบล", 
                total: 4889,
                thai: { m: 2105, f: 2301, total: 4406 },
                nonThai: { m: 268, f: 215, total: 483 },
                combined: { m: 2373, f: 2516 }
            },
            { 
                id: 1, 
                name: "หมู่ที่ 1 อ้อย", 
                total: 1096,
                thai: { m: 472, f: 575, total: 1047 },
                nonThai: { m: 28, f: 21, total: 49 },
                combined: { m: 500, f: 596 }
            },
            { 
                id: 2, 
                name: "หมู่ที่ 2 หนองปลามัน", 
                total: 1433,
                thai: { m: 634, f: 724, total: 1358 },
                nonThai: { m: 39, f: 36, total: 75 },
                combined: { m: 673, f: 760 }
            },
            { 
                id: 3, 
                name: "หมู่ที่ 3 ห้วยทราย", 
                total: 963,
                thai: { m: 453, f: 468, total: 921 },
                nonThai: { m: 22, f: 20, total: 42 },
                combined: { m: 475, f: 488 }
            },
            { 
                id: 4, 
                name: "หมู่ที่ 4 แม่แอน", 
                total: 945,
                thai: { m: 309, f: 330, total: 639 },
                nonThai: { m: 172, f: 134, total: 306 },
                combined: { m: 481, f: 464 }
            },
            { 
                id: 5, 
                name: "หมู่ที่ 5 หัวฝาย", 
                total: 452,
                thai: { m: 237, f: 204, total: 441 },
                nonThai: { m: 7, f: 4, total: 11 },
                combined: { m: 244, f: 208 }
            }
        ];

        function renderVillageList() {
            const list = document.getElementById('villageList');
            if (!list) return;
            
            list.innerHTML = populationData.map(v => `
                <button onclick="showDetail(${v.id})" class="village-item w-full text-left p-4 hover:bg-slate-50 flex justify-between items-center transition-all group">
                    <span class="font-medium ${v.id === 0 ? 'text-blue-700 font-bold' : 'text-slate-700'}">${v.name}</span>
                    <span class="text-sm bg-slate-100 px-2 py-1 rounded text-slate-500 group-hover:bg-blue-100 group-hover:text-blue-600 transition-colors">${v.total.toLocaleString()} คน</span>
                </button>
            `).join('');
        }

        window.showDetail = function(id) {
            const data = populationData.find(v => v.id === id);
            const container = document.getElementById('detailContainer');
            if (!container || !data) return;
            
            // ปรับสถานะ Active ในเมนู
            document.querySelectorAll('.village-item').forEach((el, index) => {
                if (index === id) el.classList.add('active');
                else el.classList.remove('active');
            });

            const maleRatio = Math.round((data.combined.m / data.total) * 100);
            const femaleRatio = 100 - maleRatio;

            container.innerHTML = `
                <div class="bg-white p-6 rounded-2xl shadow-sm border border-slate-200">
                    <div class="flex justify-between items-start mb-6 border-b border-slate-100 pb-4">
                        <div>
                            <h2 class="text-2xl font-bold text-slate-800">${data.name}</h2>
                            <p class="text-slate-500">สถิติประชากรแยกตามเพศและสัญชาติ</p>
                        </div>
                        <div class="bg-blue-600 text-white px-5 py-2 rounded-xl text-center shadow-md shadow-blue-200">
                            <div class="text-xs uppercase opacity-80 font-bold">รวมทั้งสิ้น</div>
                            <div class="text-2xl font-bold">${data.total.toLocaleString()}</div>
                        </div>
                    </div>

                    <!-- สรุปแยกเพศ -->
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-8">
                        <div class="bg-blue-50 border border-blue-100 p-5 rounded-xl">
                            <div class="flex items-center">
                                <div class="bg-blue-500 text-white p-3 rounded-lg mr-4">
                                    <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20"><path d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z"></path></svg>
                                </div>
                                <div>
                                    <p class="text-blue-600 text-sm font-bold uppercase tracking-wide">เพศชาย</p>
                                    <p class="text-3xl font-bold text-blue-900">${data.combined.m.toLocaleString()} <span class="text-base font-normal opacity-60 ml-1">คน</span></p>
                                </div>
                            </div>
                        </div>
                        <div class="bg-pink-50 border border-pink-100 p-5 rounded-xl">
                            <div class="flex items-center">
                                <div class="bg-pink-500 text-white p-3 rounded-lg mr-4">
                                    <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20"><path d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z"></path></svg>
                                </div>
                                <div>
                                    <p class="text-pink-600 text-sm font-bold uppercase tracking-wide">เพศหญิง</p>
                                    <p class="text-3xl font-bold text-pink-900">${data.combined.f.toLocaleString()} <span class="text-base font-normal opacity-60 ml-1">คน</span></p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- กราฟสัดส่วนเพศ -->
                    <div class="mb-8 px-2">
                        <div class="flex justify-between text-xs mb-2 font-bold text-slate-500">
                            <span class="bg-blue-100 text-blue-700 px-2 py-0.5 rounded">ชาย ${maleRatio}%</span>
                            <span class="bg-pink-100 text-pink-700 px-2 py-0.5 rounded">หญิง ${femaleRatio}%</span>
                        </div>
                        <div class="w-full h-4 bg-slate-100 rounded-full flex overflow-hidden shadow-inner">
                            <div style="width: ${maleRatio}%" class="bg-blue-500 h-full"></div>
                            <div style="width: ${femaleRatio}%" class="bg-pink-500 h-full border-l border-white/20"></div>
                        </div>
                    </div>

                    <!-- ตารางรายละเอียดสัญชาติ -->
                    <div class="overflow-hidden border border-slate-100 rounded-xl shadow-sm">
                        <table class="w-full text-left border-collapse">
                            <thead class="bg-slate-50 text-slate-500 text-xs uppercase tracking-wider">
                                <tr>
                                    <th class="p-4 font-bold">ข้อมูลสัญชาติ</th>
                                    <th class="p-4 font-bold text-right">ชาย</th>
                                    <th class="p-4 font-bold text-right">หญิง</th>
                                    <th class="p-4 font-bold text-right bg-slate-100">รวม</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-slate-100 text-slate-700">
                                <tr class="hover:bg-slate-50 transition-colors">
                                    <td class="p-4 flex items-center">
                                        <span class="w-3 h-3 bg-emerald-500 rounded-full mr-3 shadow-sm shadow-emerald-200"></span>
                                        <span class="font-medium">สัญชาติไทย</span>
                                    </td>
                                    <td class="p-4 text-right">${data.thai.m.toLocaleString()}</td>
                                    <td class="p-4 text-right">${data.thai.f.toLocaleString()}</td>
                                    <td class="p-4 text-right font-bold bg-slate-50/50">${data.thai.total.toLocaleString()}</td>
                                </tr>
                                <tr class="hover:bg-slate-50 transition-colors">
                                    <td class="p-4 flex items-center">
                                        <span class="w-3 h-3 bg-amber-500 rounded-full mr-3 shadow-sm shadow-amber-200"></span>
                                        <span class="font-medium">ไม่ใช่สัญชาติไทย</span>
                                    </td>
                                    <td class="p-4 text-right">${data.nonThai.m.toLocaleString()}</td>
                                    <td class="p-4 text-right">${data.nonThai.f.toLocaleString()}</td>
                                    <td class="p-4 text-right font-bold bg-slate-50/50">${data.nonThai.total.toLocaleString()}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            `;
        }

        // เริ่มต้นการทำงานเมื่อหน้าโหลดเสร็จ
        document.addEventListener('DOMContentLoaded', () => {
            renderVillageList();
            showDetail(0); // แสดงยอดรวมเป็นค่าเริ่มต้น
        });
    </script>
</body>
</html>
