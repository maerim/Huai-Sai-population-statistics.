                combined: { m: 475, f: 488 }
            },
            { 
                id: 4, 
                name: "หมู่ที่ 4 แม่แอน", 
                total: 945,
                thai: { m: 309, f: 330, total: 639 },
                nonThai: { m: 172, f: 134, total: 306 },
                combined: { m: 481, f: 464 }
            },
            { 
                id: 5, 
                name: "หมู่ที่ 5 หัวฝาย", 
                total: 452,
                thai: { m: 237, f: 204, total: 441 },
                nonThai: { m: 7, f: 4, total: 11 },
                combined: { m: 244, f: 208 }
            }
        ];

        function renderVillageList() {
            const list = document.getElementById('villageList');
            list.innerHTML = populationData.map(v => `
                <button onclick="showDetail(${v.id})" class="village-item w-full text-left p-4 hover:bg-slate-50 flex justify-between items-center transition-colors">
                    <span class="font-medium ${v.id === 0 ? 'text-blue-700 font-bold' : 'text-slate-700'}">${v.name}</span>
                    <span class="text-sm bg-slate-100 px-2 py-1 rounded-md text-slate-500">${v.total.toLocaleString()} คน</span>
                </button>
            `).join('');
        }

        function showDetail(id) {
            const data = populationData.find(v => v.id === id);
            const container = document.getElementById('detailContainer');
            
            // Highlight selected in list
            document.querySelectorAll('.village-item').forEach((el, index) => {
                el.classList.toggle('active', index === id);
            });

            const maleRatio = Math.round((data.combined.m / data.total) * 100);
            const femaleRatio = 100 - maleRatio;

            container.innerHTML = `
                <div class="bg-white p-6 rounded-2xl shadow-sm border border-slate-200 animate-in fade-in duration-500">
                    <div class="flex justify-between items-start mb-6">
                        <div>
                            <h2 class="text-2xl font-bold text-slate-800">${data.name}</h2>
                            <p class="text-slate-500">ข้อมูลสถิติแบบละเอียด</p>
                        </div>
                        <div class="bg-blue-600 text-white px-4 py-2 rounded-xl text-center">
                            <div class="text-xs uppercase opacity-75">รวม</div>
                            <div class="text-xl font-bold">${data.total.toLocaleString()}</div>
                        </div>
                    </div>

                    <!-- Gender Split Row -->
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-8">
                        <div class="bg-blue-50 border border-blue-100 p-4 rounded-xl flex items-center">
                            <div class="bg-blue-500 text-white p-3 rounded-lg mr-4">
                                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path></svg>
                            </div>
                            <div>
                                <p class="text-blue-600 text-sm font-semibold">ชาย</p>
                                <p class="text-2xl font-bold text-blue-900">${data.combined.m.toLocaleString()} <span class="text-sm font-normal opacity-60">คน</span></p>
                            </div>
                        </div>
                        <div class="bg-pink-50 border border-pink-100 p-4 rounded-xl flex items-center">
                            <div class="bg-pink-500 text-white p-3 rounded-lg mr-4">
                                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path></svg>
                            </div>
                            <div>
                                <p class="text-pink-600 text-sm font-semibold">หญิง</p>
                                <p class="text-2xl font-bold text-pink-900">${data.combined.f.toLocaleString()} <span class="text-sm font-normal opacity-60">คน</span></p>
                            </div>
                        </div>
                    </div>

                    <!-- Progress Bar for Gender -->
                    <div class="mb-8">
                        <div class="flex justify-between text-xs mb-2 font-bold text-slate-500 uppercase">
                            <span>ชาย ${maleRatio}%</span>
                            <span>หญิง ${femaleRatio}%</span>
                        </div>
                        <div class="w-full h-3 bg-slate-100 rounded-full flex overflow-hidden">
                            <div style="width: ${maleRatio}%" class="bg-blue-500 h-full"></div>
                            <div style="width: ${femaleRatio}%" class="bg-pink-500 h-full"></div>
                        </div>
                    </div>

                    <!-- Nationality Breakdown Table -->
                    <div class="overflow-hidden border border-slate-100 rounded-xl">
                        <table class="w-full text-left">
                            <thead class="bg-slate-50 text-slate-500 text-sm">
                                <tr>
                                    <th class="p-3 font-semibold">แยกตามสัญชาติ</th>
                                    <th class="p-3 font-semibold text-right">ชาย</th>
                                    <th class="p-3 font-semibold text-right">หญิง</th>
                                    <th class="p-3 font-semibold text-right">รวม</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-slate-100 text-slate-700">
                                <tr>
                                    <td class="p-3 flex items-center">
                                        <span class="w-2 h-2 bg-emerald-500 rounded-full mr-2"></span>
                                        สัญชาติไทย
                                    </td>
                                    <td class="p-3 text-right">${data.thai.m.toLocaleString()}</td>
                                    <td class="p-3 text-right">${data.thai.f.toLocaleString()}</td>
                                    <td class="p-3 text-right font-bold">${data.thai.total.toLocaleString()}</td>
                                </tr>
                                <tr>
                                    <td class="p-3 flex items-center text-slate-500">
                                        <span class="w-2 h-2 bg-amber-500 rounded-full mr-2"></span>
                                        ไม่ใช่สัญชาติไทย
                                    </td>
                                    <td class="p-3 text-right">${data.nonThai.m.toLocaleString()}</td>
                                    <td class="p-3 text-right">${data.nonThai.f.toLocaleString()}</td>
                                    <td class="p-3 text-right font-bold">${data.nonThai.total.toLocaleString()}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            `;
        }

        // Initialize
        renderVillageList();
        // Show total summary by default
        showDetail(0);
    </script>
